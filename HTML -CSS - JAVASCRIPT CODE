<body>
  <h1>üå§ Smart Weather App (Demo)</h1>
  <div class="search-box">
    <input type="text" id="cityInput" placeholder="Enter city name (e.g. Delhi, Mumbai)" />
    <button onclick="getWeather()">Search</button>
  </div>

  <div id="weatherCard" class="card" style="display:none">
    <h2 id="cityName"></h2>
    <div id="icon" class="icon">‚òÄ</div>
    <p id="temp" class="temp"></p>
    <p id="description" class="desc"></p>
  </div>

  <script>
    const dummyWeather = {
      Delhi: { temp: 34, desc: 'Sunny', icon: '‚òÄ' },
      Mumbai: { temp: 30, desc: 'Humid and Rainy', icon: 'üåß' },
      London: { temp: 18, desc: 'Cloudy', icon: '‚òÅ' },
      Paris: { temp: 22, desc: 'Clear Sky', icon: '‚òÄ' },
      Tokyo: { temp: 25, desc: 'Light Rain', icon: 'üå¶' },
      NewYork: { temp: 28, desc: 'Partly Cloudy', icon: '‚õÖ' },
      Bangalore: { temp: 26, desc: 'Moderate Rain', icon: 'üåß' },
      Jaipur: { temp: 35, desc: 'Hot and Dry', icon: 'üî•' }
    };

    function getWeather() {
      const city = document.getElementById('cityInput').value.trim();
      const data = dummyWeather[city];

      if (!data) {
        alert('City not found in demo data!\nTry: Delhi, Mumbai, London, etc.');
        return;
      }

      document.getElementById('weatherCard').style.display = 'block';
      document.getElementById('cityName').innerText = city;
      document.getElementById('temp').innerText = `${data.temp}¬∞C`;
      document.getElementById('description').innerText = data.desc;
      document.getElementById('icon').innerText = data.icon;
    }
  </script>
